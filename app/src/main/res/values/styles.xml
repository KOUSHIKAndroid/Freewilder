<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>


    <style name="GreenTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <!--EditText hint color-->
        <item name="android:textColorHint">@color/colorGray</item>

        <item name="colorControlNormal">@color/colorGray</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="android:textSize">16sp</item>

        <item name="colorControlActivated">@color/colorGreen</item>
        <!-- EditText line color when EditText  in un-focus-->

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FABC00</item>
        <item name="colorControlActivated">#FABC00</item>
    </style>


</resources>
