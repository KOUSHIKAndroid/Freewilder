<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <freewilder.rockme.com.freewilder.custom_front.OpenSansRegular
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="header"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="@color/colorBlack"
        />

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardElevation="6dp"
        card_view:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/RR_Img"
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack"/>

                <freewilder.rockme.com.freewilder.custom_front.OpenSansRegular
                    android:id="@+id/tv_book_now"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="#FC6363"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="Book Now"/>
            </RelativeLayout>

            <freewilder.rockme.com.freewilder.custom_front.OpenSansBold
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RR_Img"
                android:text="Product Name"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:paddingTop="10dp"
                />

            <freewilder.rockme.com.freewilder.custom_front.OpenSansBold
                android:paddingTop="10dp"
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RR_Img"
                android:text="PLN 790"
                android:textSize="16sp"
                android:textColor="@color/colorGreen"
                android:layout_alignParentRight="true"
                />

            <freewilder.rockme.com.freewilder.custom_front.OpenSansRegular
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_product_name"
                android:id="@+id/tv_sold_or_sell"
                android:layout_width="wrap_content"
                android:textColor="#FC6363"
                android:text="Sold out"
                android:textSize="12sp"
                android:layout_height="wrap_content" />


            <freewilder.rockme.com.freewilder.custom_front.OpenSansRegular
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_sold_or_sell"
                android:id="@+id/tv_profile_category_details"
                android:layout_width="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text.."
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <RatingBar
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_profile_category_details"
                android:id="@+id/rate_profile_review"
                android:layout_width="wrap_content"
                android:rating="4.5"
                android:layout_alignParentRight="true"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_height="wrap_content"
                android:theme="@style/RatingBar"/>


            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/img_review_place"
                android:layout_width="15dp"
                android:layout_height="14dp"
                android:layout_below="@+id/tv_profile_category_details"
                android:src="@drawable/ic_profile_review_map_placeholder"/>

            <freewilder.rockme.com.freewilder.custom_front.OpenSansRegular
                android:layout_marginTop="10dp"
                android:id="@+id/tv_profile_address"
                android:layout_centerVertical="true"
                android:layout_below="@+id/tv_profile_category_details"
                android:layout_toRightOf="@id/img_review_place"
                android:layout_toLeftOf="@+id/rate_profile_review"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Drobin,Poland"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        ></LinearLayout>

    <freewilder.rockme.com.freewilder.custom_front.OpenSansRegular
        android:layout_marginBottom="30dp"
        android:background="@color/colorGreen"
        android:id="@+id/tv_view_more"
        android:gravity="center"
        android:textSize="18sp"
        android:text="view more"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="45dp"/>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="#555555"-->
    <!--/>-->


</LinearLayout>