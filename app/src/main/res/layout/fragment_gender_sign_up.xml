<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's Your Gender?"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Please provide your gender"/>



    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        >
        <ImageView
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:src="@drawable/ic_male_sign_up"
            android:id="@+id/img_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:text="Male"
            android:layout_marginBottom="5dp"/>
        <RadioButton
            android:id="@+id/male_radio_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorBlack"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        >
        <ImageView
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_woman_sign_up"
            android:id="@+id/img_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:text="Female"/>

        <RadioButton
            android:id="@+id/female_radio_button"
            android:buttonTint="@color/colorBlack"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>



    <TextView
        android:id="@+id/tv_next"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="@string/sign_up_next"
        android:textSize="20sp"
        android:background="@color/colorRed"
        android:textColor="@color/colorWhite"/>

</LinearLayout>