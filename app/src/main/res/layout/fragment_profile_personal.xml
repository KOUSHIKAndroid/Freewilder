                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_personal_fragment_about_me"
                android:textColor="@color/colorGreen"
                android:textSize="20sp"/>

            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#555555" />

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:padding="2dp"
                    android:src="@drawable/ic_school_24dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <freewilder.rockme.com.freewilder.custom_front.OpenSansSemiBold
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/profile_personal_fragment_school"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <freewilder.rockme.com.freewilder.custom_front.OpenSansRegular
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Lorem Ipsum
Lorem Ipsum is a simply text
Lorem Ipsum is simply dummy text of
the printing and typesetting industry"
