                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#555555" />

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:padding="2dp"
                    android:src="@drawable/ic_business_center_black_24dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <freewilder.rockme.com.freewilder.custom_front.OpenSansSemiBold
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/profile_personal_fragment_work"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <freewilder.rockme.com.freewilder.custom_front.OpenSansRegular
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Lorem Ipsum
Lorem Ipsum is a simply text"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#555555" />

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:padding="2dp"
                    android:src="@drawable/ic_translation"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <freewilder.rockme.com.freewilder.custom_front.OpenSansSemiBold
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/profile_personal_fragment_language"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <freewilder.rockme.com.freewilder.custom_front.OpenSansRegular
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Lorem Ipsum,Lorem Ipsum,Lorem Ipsum"
