<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_account_activation_signup"
        android:layout_centerHorizontal="true"
        android:text="@string/account_activation_signup"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_account_activation_details_signup"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        android:layout_below="@+id/tv_account_activation_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_activation_details_signup"/>



    <LinearLayout
        android:id="@+id/LLEditVerify"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv_account_activation_details_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_layout_value1"
            app:hintTextAppearance="@style/GreenTextInputLayout"
            >

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/input_value1"
                android:textSize="30sp"
                android:maxLength="1"
                android:digits="0123456789"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusRight="@+id/input_value2"
                android:theme="@style/MyEditText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_value2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:hintTextAppearance="@style/GreenTextInputLayout">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/input_value2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:gravity="center"
                android:maxLength="1"
                android:nextFocusRight="@+id/input_value3"
                android:textSize="30sp"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_layout_value3"
            app:hintTextAppearance="@style/GreenTextInputLayout"
            >

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/input_value3"
                android:textSize="30sp"
                android:maxLength="1"
                android:digits="0123456789"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusRight="@+id/input_value4"
                android:theme="@style/MyEditText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_layout_value4"
            app:hintTextAppearance="@style/GreenTextInputLayout"
            >

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/input_value4"
                android:textSize="30sp"
                android:maxLength="1"
                android:digits="0123456789"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusRight="@+id/input_value4"
                android:theme="@style/MyEditText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_layout_value5"
            app:hintTextAppearance="@style/GreenTextInputLayout"
            >

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/input_value5"
                android:textSize="30sp"
                android:maxLength="1"
                android:digits="0123456789"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyEditText"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <TextView
        android:layout_below="@+id/LLEditVerify"
        android:id="@+id/tv_sign_up"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="@string/verify_sign_up"
        android:textSize="20sp"
        android:background="@color/colorRed"
        android:textColor="@color/colorWhite"/>




</RelativeLayout>